{
  "manifest_version": 3,
  "name": "SHRTNR - URL Shortener",
  "description": "Right-click to shorten any URL with SHRTNR",
  "version": "1.0.0",
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "storage",
    "notifications",
    "offscreen"
  ],
  "host_permissions": [
    "https://*.vercel.app/*",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
