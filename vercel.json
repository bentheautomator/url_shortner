{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/:code", "destination": "/api/redirect" },
    { "source": "/((?!assets|favicon).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/*.py": {
      "runtime": "python3.11"
    }
  }
}
